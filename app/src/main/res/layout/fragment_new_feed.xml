<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="zeus.quantm.greenfood.fragments.NewFeedFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:background="@color/colorPrimary"
        android:layout_width="120dp"
        android:layout_below="@id/tb_main"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_toEndOf="@+id/tab_layout"
        android:layout_alignBottom="@+id/tab_layout" />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_below="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_sort_black_24dp"
        android:layout_below="@+id/tb_main"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
